@{
    ViewData["Title"] = "Home Page";
}

<h4>Claims for the current user</h4>

<table class="table table-striped table-bordered table-condensed table-hover">
    <tr>
        <th>ClaimType</th>
        <th>Value</th>
    </tr>

    @foreach (var claim in User.Claims)
    {
    <tr>
        <td>@claim.Type</td>
        <td>@claim.Value</td>
    </tr>
    }

</table>
